@model IEnumerable<MyCompetence.domain.Entities.Reclamation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <!-- Breadcrumbs-->

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Categories</li>

    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Category Details
            <a href="../Reclamation/Create" class="btn btn-info pull-right fa fa-plus">Add New</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Category Name</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td> @Html.DisplayFor(modelItem => item.Titre)</td>
                                <td> @Html.DisplayFor(modelItem => item.Description)</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ReclamationId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ReclamationId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ReclamationId })
                                </td>


                            </tr>
                        }

                    </tbody>
                </table>
                <input type="button" id="btnExport" value="Export" onclick="Export()" class="auto-style5" />
            </div>

        </div>
    </div>
</div>


<script src="~/jsfiles/html2canvas.min.js"></script>
<script src="~/jsfiles/pdfmake.min.js"></script>
<script type="text/javascript">
    function Export() {
        alert("hello");
        html2canvas(document.getElementById('dataTable'), {
            onrendered: function (canvas) {
                var data = canvas.toDataURL();
                var docDefinition = {
                    content: [{
                        image: data,
                        width: 500
                    }]
                };
                pdfMake.createPdf(docDefinition).download("Reclamation.pdf");
                alert("Reclamation Downloading Started");
            }
        });
    }
</script>
