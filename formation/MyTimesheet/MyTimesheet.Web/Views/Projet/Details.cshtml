@model MyTimesheet.Domain.Entities.projets

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>projets</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.projet_From)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.projet_From)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.projet_To)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.projet_To)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.status_projet)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.status_projet)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.title_projet)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.title_projet)
        </dd>

    </dl>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>

                <tr>
                    <th>
                        title                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                       from
                    </th>
                    <th>to
                    </th>
                   
                   
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    th>
                    title                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        from
                    </th>
                    <th>
                        to
                    </th>


                    <th></th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in ViewBag.result)
                {
                    <tr>
                        <td>
                            @item.title
                        </td>
                        <td>
                            @item.status
                        </td>
                        <td>
                            @item.valueFrom
                        </td>
                        <td>
                            @item.valueTo
                        </td>
                        
                        <td>
                            @Html.ActionLink("ajouter au projet", "CreateP", new { id = item.tache_ID }) |

                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <input type="button" id="btnExport" value="Export" onclick="Export()" class="auto-style5" />
    </div>
</div>
<script src="~/jsfiles/html2canvas.min.js"></script>
<script src="~/jsfiles/pdfmake.min.js"></script>
<script type="text/javascript">
    function Export() {
        alert("download PDF");
        html2canvas(document.getElementById('dataTable'), {
            onrendered: function (canvas) {
                var data = canvas.toDataURL();
                var docDefinition = {
                    content: [{
                        image: data,
                        width: 500
                    }]
                };
                pdfMake.createPdf(docDefinition).download("tache.pdf");
                alert("Tache Downloading Started");
            }
        });
    }
</script>

<p>
