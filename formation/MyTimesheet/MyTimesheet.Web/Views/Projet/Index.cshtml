@model IEnumerable<MyTimesheet.Domain.Entities.projets>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.title_projet)
                    </th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.title_projet)
                        </td>
                        <td>

                            @Html.ActionLink("List taches", "Details", new { id = item.Projet_ID }) |
                            
                            @Html.ActionLink("Edit", "Edit", new { id = item.Projet_ID })
                            |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Projet_ID })
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <input type="button" id="btnExport" value="Export" onclick="Export()" class="auto-style5" />
    </div>
</div>
<script src="~/jsfiles/html2canvas.min.js"></script>
<script src="~/jsfiles/pdfmake.min.js"></script>
<script type="text/javascript">
    function Export() {
        alert("download PDF");
        html2canvas(document.getElementById('dataTable'), {
            onrendered: function (canvas) {
                var data = canvas.toDataURL();
                var docDefinition = {
                    content: [{
                        image: data,
                        width: 500
                    }]
                };
                pdfMake.createPdf(docDefinition).download("tache.pdf");
                alert("Tache Downloading Started");
            }
        });
    }
</script>
